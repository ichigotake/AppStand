<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/applicationIcon"
        android:layout_alignParentLeft="true"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"/>

    <RelativeLayout
        android:layout_toRightOf="@+id/applicationIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/applicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/applicationPackageName"
            android:layout_below="@+id/applicationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/applicationLastUpdated"
            android:layout_below="@+id/applicationPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>

    </RelativeLayout>

</RelativeLayout>